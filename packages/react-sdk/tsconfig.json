{
  "compilerOptions": {
    "outDir": "lib/esm",
    "module": "esnext",
    "target": "es5",
    "lib": ["es6", "dom", "es2016", "es2017"],
    "jsx": "react-jsx",
    "declaration": true,
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "esModuleInterop": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "allowSyntheticDefaultImports": true,
    "paths": {
      "@nvoy/base": ["../base"], // Required cause WSL workspaces don't work well,
      "@nvoy/base/Action": ["../base/lib/esm/Action.d.ts"],
      "@nvoy/base/ActionEither": ["../base/lib/esm/ActionEither.d.ts"]
    }
  },
  "include": ["src", "src/configs/dev.d.ts"],
  "exclude": ["node_modules", "lib"],

}
